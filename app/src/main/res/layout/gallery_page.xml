    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="420dp"
        android:layout_height="121dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824"
        tools:layout_editor_absoluteX="-5dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/viewEventNames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="164dp"
                android:layout_height="95dp"
                android:text="Event One" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="164dp"
                android:layout_height="95dp"
                android:text="Event Two" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="164dp"
                android:layout_height="95dp"
                android:text="Event Three" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="164dp"
                android:layout_height="95dp"
                android:text="Event Four" />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:text="detailsText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <ImageView
        android:id="@+id/galleryPhoto"
        android:layout_width="423dp"
        android:layout_height="316dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/im1"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/button_to_map_activity"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:text="Show on map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

